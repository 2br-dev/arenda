@import './props.styl'


.updater 
    display: none
    position: fixed
    top: 0
    left: 0
    width: 100%
    height 100%
    background: color_2
    opacity 0.9
    z-index: 10000
    &-visible
        display: block

    &__loader
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        z-index: 10001
        
        &_body
            position relative
            padding: 10px 20px
        
        &_title
            color: color_1
            font-size: 16px
            text-transform: uppercase
            text-align: center
        
        &_line
            width: 100%
            position: absolute
            bottom: 0
            left: 0
            height 5px
            background: color_3
            border-radius: 5px
            animation: loader 1.5s linear infinite

@keyframes loader
    0% 
        width: 0%
    50%   
        width: 100%  
    100%
        left: initial
        right: 0
        width: 0%