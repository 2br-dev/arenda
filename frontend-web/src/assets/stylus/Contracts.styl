@import './props.styl'


.list
    margin: 20px 0 0 0 
    border-radius: 5px
    background: color_2
    padding: 20px
    box-shadow: 0px 0px 5px 0px color_4

    &__title
        font-size: 20px
        font-weight: 700
        margin: 0 0 40px 0
    
    &__link
        display: block
        padding: 10px
        border-radius: 5px
        font-size: 18px
        color: color_1
        cursor pointer
        transition: 0.2s
        &:hover
            background: color_4