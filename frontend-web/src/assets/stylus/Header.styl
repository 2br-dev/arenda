@import './props.styl'


.header 
    background: color_3
    padding: 20px
    position: fixed
    left 0
    top: 0
    width: 100%

    &__body
        display: flex
        align-items: center
        justify-content: space-between
    
    &__nav
        display: flex
        align-items: center
        justify-content: flex-start
        flex-grow: 1
        padding: 0 20px 

        &_link
            font-size: 18px
            color: color_2
            cursor pointer
            margin: 0 40px 0 0
            &:last-child
                margin: 0
            &:hover
                text-decoration: underline
    
    &__btn
        withoutHighlighting()
        font-size: 16px
        color: color_3
        display: block
        padding: 10px 30px
        border-radius: 5px
        background: color_2
        border: 2px solid color_2
        cursor: pointer
        transition: tDelay
        text-transform: uppercase
        flex-shrink: 0
        &:hover:not(.mobile)
            color: color_2
            background: transparent
    


@media screen and (max-width: 1000px)
    .header 
        padding: 10px

        &__logo
            withoutHighlighting()
            font-size: 25px
        
        &__btn
            withoutHighlighting()
            font-size: 12px
            padding: 5px 15px