@import './props.styl'


.header 
    background: color_3
    padding: 20px
    position: fixed
    left 0
    top: 0
    width: 100%

    &__body
        display: flex
        align-items: center
        justify-content: space-between
    
    &__logo
        withoutHighlighting()
        font-size: 40px
        font-weight: 700
        color: color_2
    
    &__btn
        withoutHighlighting()
        font-size: 16px
        color: color_3
        display: block
        padding: 10px 30px
        border-radius: 5px
        background: color_2
        border: 2px solid color_2
        cursor: pointer
        transition: tDelay
        text-transform: uppercase
        &:hover:not(.mobile)
            color: color_2
            background: transparent


@media screen and (max-width: 1000px)
    .header 
        padding: 10px

        &__logo
            withoutHighlighting()
            font-size: 25px
        
        &__btn
            withoutHighlighting()
            font-size: 12px
            padding: 5px 15px