@import './props.styl'


.content
    padding: 20px

@media screen and (max-width: 1000px)
    .content
        padding: 10px


.registry
    border-radius: 5px
    background: color_2
    padding: 20px
    box-shadow: 0px 0px 5px 0px color_4

    &__empty
        padding: 100px 0
        text-align: center
        font-size: 20px; 
    
    &__title
        font-size: 20px
        font-weight: 700
        color: color_1
        margin: 0 0 40px 0

    &__user
        padding: 0 0 20px 0
        border-left: 5px solid color_4
        border-bottom: 5px solid color_4
        &&:last-child
            padding: 0
            border-bottom: 0
        &_box-flex
            display: flex
            align-items: center
            justify-content: space-between
            transition: tDelay
            cursor: pointer
            padding: 20px
            &:hover
                background: color_4
        &_name
            font-size: 18px
            font-weight: 500
            color: color_1
            flex-grow: 1
        &_status
            font-size: 18px
            font-weight: 500
            flex-shrink: 0
            margin: 0 0 0 20px
            color: color_1
            text-transform: uppercase
            &-active
                color: color_6
            &-no-active
                color: color_5
    
    &__contract
        border-left: 5px solid color_4
        border-bottom: 5px solid color_4
        margin: 0 0 0 20px
        overflow hidden
        &:last-child
            border-bottom: 0
        &_box-flex
            cursor pointer
            padding: 20px
            display: flex
            align-items: center
            justify-content: space-between
            &:hover
                background: color_4
        &_name
            font-size: 16px
            color: color_1
            flex-grow: 1
        &_date
            font-size: 16px
            font-style: italic
            color: color_1
            flex-shrink: 0
            margin: 0 40px
        &_balance
            font-size: 16px
            color: color_1
            flex-shrink: 0
            margin: 0 40px 0 0
            &-red
                color: color_5
            &-green
                color: color_6
        &_status
            font-size: 16px
            font-weight: 500
            color: color_1
            text-transform: uppercase
            flex-shrink: 0
            &-active
                color: color_6
            &-no-active
                color: color_5
    
    &__invoice
        border-left: 5px solid color_4
        margin: 0 0 0 20px
        padding: 20px
        cursor pointer
        transition: tDelay
        display: flex
        align-items: center
        justify-content: flex-start
        &:hover
            background: color_4
        &:last-child
            margin-bottom: 20px
        &_date
            flex-shrink: 0
            font-size: 14px
            color: color_1
            margin: 0 40px 0 0
        &_amount
            font-size: 14px
            color: color_1
            flex-shrink: 0
        &_status
            text-align: right 
            font-weight: 500
            flex-grow: 1
            text-transform: uppercase
            color: color_1
            font-size: 14px
            &-paid
                color: color_6
            &-no-paid
                color: color_5
     